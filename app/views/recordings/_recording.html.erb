<dl class="dl-horizontal">
  <dt>Recorded:</dt>
  <dd><%= recording.recorded %></dd>

  <dt>Interview:</dt>
  <dd><%= recording.interview %></dd>

  <dt>Language:</dt>
  <dd><%= recording.language %></dd>

  <dt>Phrase:</dt>
  <dd><%= recording.phrase %></dd>

  <% if recording.audio_file_name  %>
    <dt>Audio:</dt>
    <dd><%= audio_tag recording.audio.url, controls: true, autoplay: false %></dd>
  <% end %>

  <% if recording.text_response  %>
    <dt>Text response:</dt>
    <dd><%= recording.text_response %></dd>
  <% end %>
</dl>
