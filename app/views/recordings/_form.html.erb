<%= form_for(@recording, html: { class: "form-horizontal", role: "form", multipart: true }) do |f| %>
  <% if @recording.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@recording.errors.count, "error") %> prohibited this recording from being saved:</h4>

      <ul>
      <% @recording.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :audio, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :audio, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :recorded, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.datetime_select :recorded, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :interview, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select(:interview_id, Interview.all, :id, :to_s, class: "form-control") %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phrase, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.collection_select(:phrase_id, Phrase.all, :id, :english_text, class: "form-control") %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :text_response, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :text_response, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
