<div class="page-header">
  <%= link_to phrases_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_phrase_path(@phrase), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show phrase</h1>
</div>

<dl class="dl-horizontal">
  <dt>Study:</dt>
  <dd><%= @phrase.study.try(:name) %></dd>

  <dt>English text:</dt>
  <dd><%= @phrase.english_text %></dd>

  <dt>Audio:</dt>
  <dd><%= audio_tag @phrase.audio.url, controls: true, autoplay: false %></dd>

  <dt>Image:</dt>
  <dd><%= image_tag @phrase.image.url %></dd>

  <dt>Choices:</dt>
  <dd><%= @phrase.choices.join(', ') %></dd>
</dl>
