<dl class="dl-horizontal">
  <dt class="col-sm-2">English text:</dt>
  <dd class="col-sm-10"><%= phrase.english_text %></dd>

  <% if phrase.audio %>
    <dt>Audio:</dt>
    <dd><%= audio_tag phrase.audio.url, controls: true, autoplay: false %></dd>
  <% end %>

  <% if phrase.image %>
    <dt>Image:</dt>
    <dd><%= image_tag phrase.image.url %></dd>
  <% end %>

  <dt>Choices:</dt>
  <dd><%= phrase.string_choices %></dd>
</dl>
