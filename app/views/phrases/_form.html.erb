<%= form_for(@phrase, html: { class: "form-horizontal", role: "form", multipart: true }) do |f| %>
  <% if @phrase.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@phrase.errors.count, "error") %> prohibited this phrase from being saved:</h4>

      <ul>
      <% @phrase.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :english_text, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :english_text, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :audio, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :audio, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :image, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :response_type_id, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.select(:response_type_id,
                       options_for_select([['Text', 1], ['Audio', 2], ['Both', 3]]),
                         class: "form-control") %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :choices, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :choices, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
