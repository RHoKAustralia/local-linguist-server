<div class="page-header">
  <%= link_to studies_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_study_path(@study), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show study</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @study.name %></dd>

  <dt>Start date:</dt>
  <dd><%= @study.start_date %></dd>

</dl>

<h2>Phrases</h2>
<%= render @study.phrases.order(:id) %>
