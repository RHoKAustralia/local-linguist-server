<div class="page-header">
  <%= link_to locales_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_locale_path(@locale), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show locale</h1>
</div>

<dl class="dl-horizontal">
  <dt>Name:</dt>
  <dd><%= @locale.name %></dd>

  <dt>Municipality:</dt>
  <dd><%= link_to @locale.municipality, @locale.municipality %></dd>

</dl>
